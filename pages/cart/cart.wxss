/* pages/cart/cart.wxss */
.address{
  height: 150rpx;
  box-shadow: 0 10rpx 5px grey;
  padding-top: 25rpx;
}
.address button{
  width: 400rpx;
}
.title{
  margin-right: 20rpx;
  margin-top: 50rpx;
  border-bottom: 2rpx solid grey;
  font: 700;
  font-size: 40rpx;
  height: 100rpx;
  line-height: 100rpx;
}
.pay-bar{
  display: flex;
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  height: 100rpx;
  background-color: white;
}
.pay-bar .check,.pay-bar .total{
  flex: 3;
  text-align: center;
}
.pay-bar .check{
  line-height: 100rpx;
}
.pay-bar .settlement{
  flex: 2;
  background-color: red;
  color: white;
  text-align: center;
  line-height: 100rpx;
}
.total .two {
  color: red;
}

/* 购物车列表 */
.cart-list-item{
  display: flex;
  border-bottom: 2rpx solid grey;
}
.cart-list-item .check{
  position: relative;
  top:100rpx;
  
}
.cart-image{
  height: 300rpx;
}
.cart-image image{
  height: 100%;
}
.cart-price{
  display: flex;
}
.num {
  display: flex;
}