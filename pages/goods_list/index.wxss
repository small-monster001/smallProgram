/* pages/goods_list/index.wxss */
.control-tab{
  margin-top:100rpx;
  display: flex;
  height: 100rpx;
  line-height: 100rpx;
  border-bottom: 2rpx solid grey;
}
.control-tab .control-item{
  flex: 1;
  text-align: center;
}
.active{
  color: red;
  border-bottom: red 2rpx solid;
}
.goods-list-item{
  display: flex;
  border-bottom: 2rpx solid grey;
}
.small-picture{
  height: 250rpx;
  width: 250rpx;
}
.small-picture image{
  width: 100%;
  height: 100%;
}
.desc{
  flex: 1;
  padding-top: 30rpx;
  margin-left: 20rpx;
}
.price{
  color: red;
  margin-top: 20rpx;
}