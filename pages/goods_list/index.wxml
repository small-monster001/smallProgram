<!--pages/goods_list/index.wxml-->
<view>
  <search></search>
  <view class="control-tab">
    <view 
      wx:for="{{controlItem}}" 
      wx:key="index"
      bindtap="controlClick"
      data-index="{{index}}"
      class="control-item {{currentIndex===index?'active':''}}">{{item}}</view>
  </view>
  <view wx:for="{{goodsList}}" wx:key="index" class="goods-list-item">
    <view class="small-picture">
      <image mode="widthFix" src="{{item.goods_small_logo}}"></image>
    </view>
    <view class="desc">
      <text>{{item.goods_name}}</text>  
      <view class="price">ï¿¥{{item.goods_price}}</view>
    </view>
  
  </view>
</view>
